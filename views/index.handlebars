<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2 display">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-3">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div>
        <form action='sorting' method="get">
          <select name="sort" onchange="this.form.submit()" aria-label="select sort">
            <option value="nameAsc" {{selected sort "nameAsc"}} selected>排序</option>
            <option value="nameAsc" {{selected sort "nameAsc"}}>A-Z</option>
            <option value="nameDesc" {{selected sort "nameDesc"}}>Z-A</option>
            <option value="categoryAsc" {{selected sort "categoryAsc"}}>類別</option>
            <option value="locationAsc" {{selected sort "locationAsc"}}>地區</option>
          </select>
        </form>
      </div>
      <div class="card-columns mt-2">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}"
              alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            <div class="card-footer d-flex justify-content-end flex-wrap">
              <a href="/restaurants/{{this._id}}/edit">
                <button class="btn btn-link btn-sm">Edit</button>
              </a>
              <a href="/restaurants/{{this._id}}"><button class="btn btn-link btn-sm">Details</button>
              </a>
              <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger btn-sm text-white">delete</button>
              </form>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>